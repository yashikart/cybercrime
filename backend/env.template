# Database Configuration
DATABASE_URL=sqlite:///./investigation.db

# Email Configuration (Brevo)
# SMTP values are optional and mainly for local/dev. On Render, prefer the HTTPS API.
EMAIL_ENABLED=true
SMTP_ENABLED=false
MAIL_SERVER=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=your-verified-email@example.com
MAIL_FROM_NAME=Cybercrime Investigation System
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# Brevo HTTPS API key (REQUIRED for Render). Use your xkeysib-... key here.
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-YOUR_BREVO_API_KEY_HERE

# Security
SECRET_KEY=
SUPERADMIN_EMAIL=
SUPERADMIN_PASSWORD=
SUPERADMIN_BOOTSTRAP_ENABLED=false
SUPERADMIN_BOOTSTRAP_FORCE_RESET=false
SUPERADMIN_BOOTSTRAP_TOKEN=

# Frontend
# Set to your Render frontend URL (defaults to https://cybercrime-frontend.onrender.com if not set)
FRONTEND_BASE_URL=https://cybercrime-frontend.onrender.com

# API Docs
EXPOSE_API_DOCS=false

# RBAC
RBAC_POLICY_PATH=rbac-permissions.json

# Sovereign Integrations (BHIV)
# Application-level contracts only; do not expose internal Core/Bucket details.
BHIV_BUCKET_EVIDENCE_URL=
BHIV_BUCKET_API_KEY=
BHIV_CORE_EVENT_URL=
BHIV_INTEGRATION_TIMEOUT_SECONDS=10
EVENT_RETRY_MAX_ATTEMPTS=3
EVENT_BUFFER_PATH=./event_buffer/events.jsonl
KAFKA_BOOTSTRAP_SERVERS=
KAFKA_EVENT_TOPIC=cybercrime-governance-events

# API Configuration
HOST=0.0.0.0
PORT=3000
DEBUG=false
